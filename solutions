# Args
FLAG=$1

# Constants
ON="on"
OFF="off"

# Prepare the working directory
rm -r src/test/*
cp -r koan-templates/* src/test

# Determine what to do
if [ "$FLAG" = "$OFF" ]; then GROUP=1; else GROUP=2; fi

# Process the files
find src/test -type f -print0 | xargs -0 sed -E -i '' -e "s/(_{2,})\`(.*)\`/\\$GROUP/g"
